{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "build": "yarn tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format:fix": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "format:check": "prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "format:lint": "yarn format:check && yarn lint:check",
    "husky:setup": "cd .. && cd .. && husky install 'a-chat-app/server'/.husky",
    "husky:prepare": "npx husky add .husky/pre-commit 'cd a-chat-app/server && yarn format:lint'"
  },
  "lint-staged": {
    "src/**/*.ts": "yarn format:lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.3.0",
    "socket.io": "^4.7.0",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  }
}
